<!DOCTYPE html>
<html>
    <head>
        <title>Survey Form Revised</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type ="text/javascript">
               $(document). ready(function (){
                  // this triggers the connection event in our server!
                  var socket  = io.connect();
                  $('button').click(function(){
                    socket.emit("button_clicked", {reason:"because I want to learn about sockets"});
                  });
                  socket.on('server_response', function (data){
                    console.log('The Server Says:' + data.response);
                  });
                  $('').submit(function(){
                      socket.emit("posting_form", {name : name, Loction : location, FavoriteLang: language});
                  });
                  // we'll write all the socket stuff after the above line!
              });
    
        </script>
    </head>
    <body>
        <div class = "container">
            <form action = "/users" method="post">
                <div class = "crass">
                    <label for="name">Name</label>
                    <input type="text" name="name">
                </div>
                <div class = "crass">
                    <label for ="loca">Dojo Location</label>
                    <input type="text" name="loca">
                </div>
                <div class = "crass">
                    <label for = "lang">Favorite Language</label>
                    <select>>
                        <option value ="CSS"></option>
                        <option value ="HTML"></option>
                        <option value ="MEAN"></option>
                        <option value ="Python"></option>
                    </select>
                </div>
                <div class = "crass">
                    <textarea row="10" cols="100">
                    </textarea>
                </div>
                <div class="crass">
                    <submit name="submit" value ="Submit Information">
            </form>
        </div>
    </body>
</html>
